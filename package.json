{
  "name": "@mytechtoday/url-reference-mapper",
  "version": "1.0.0",
  "description": "Bidirectional mapping between local filesystem paths and published internet URLs for Augment AI workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "url-ref-mapper": "dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "validate": "node dist/cli.js validate"
  },
  "keywords": [
    "url-mapping",
    "path-mapping",
    "augment-ai",
    "openspec",
    "beads",
    "url-reference",
    "filesystem",
    "wordpress",
    "static-site",
    "developer-tools"
  ],
  "author": "MyTech.Today",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mytech-today-now/url-reference.git"
  },
  "bugs": {
    "url": "https://github.com/mytech-today-now/url-reference/issues"
  },
  "homepage": "https://github.com/mytech-today-now/url-reference#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  }
}

